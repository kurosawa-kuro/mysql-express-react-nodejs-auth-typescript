{
  "name": "mern-auth",
  "version": "1.0.0",
  "description": "MERN authentication system",
  "main": "server.js",
  "scripts": {
    "start": "node ./backend/server.ts",
    "server": "nodemon ./backend/server.ts",
    "setupDatabaseForOperations": "ts-node ./backend/database/databaseOperations/initializeDatabase.ts",
    "setupDatabaseForOperations_user": "ts-node ./backend/database/databaseOperations/initializeDatabaseWithDefaultUser.ts",
    "build": "tsc",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env DATABASE_URL='mysql://root:@localhost:3306/sns_shpping_test' jest --runInBand --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "author": "Brad Traversy",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jest": "^29.5.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "babel-jest": "^29.5.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "prisma": "^4.14.1",
    "typescript": "^5.0.4"
  }
}